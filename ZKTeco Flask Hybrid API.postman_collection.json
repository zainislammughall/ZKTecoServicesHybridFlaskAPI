{
  "info": {
    "name": "ZKTeco Attendance API",
    "_postman_id": "b7f3c6a1-4d52-4c9b-bb88-7c7e3d11c101",
    "description": "API collection for ZKTeco push, pull, logs and device management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Add Device (Manual)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"ip\": \"192.168.1.201\",\n  \"port\": 4370\n}"
        },
        "url": {
          "raw": "http://localhost:5000/devices/add",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["devices", "add"]
        }
      }
    },
    {
      "name": "Get Devices",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/devices",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["devices"]
        }
      }
    },
    {
      "name": "Push Attendance",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"pin\": \"1001\",\n  \"time\": \"2025-03-18 09:14:33\",\n  \"type\": 0,\n  \"punch\": 1,\n  \"sn\": \"ZK123456\",\n  \"device_ip\": \"192.168.1.201\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/push/attendance",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["push", "attendance"]
        }
      }
    },
    {
      "name": "Pull Device Logs",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/pull?ip=192.168.1.201&port=4370",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["pull"],
          "query": [
            { "key": "ip", "value": "192.168.1.201" },
            { "key": "port", "value": "4370" }
          ]
        }
      }
    },
    {
      "name": "Get Logs (Auto Sync)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/logs",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["logs"]
        }
      }
    },
    {
      "name": "Filter Logs",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:5000/logs/filter?ip=192.168.1.201&from=2025-03-01&to=2025-03-18",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["logs", "filter"],
          "query": [
            { "key": "ip", "value": "192.168.1.201" },
            { "key": "from", "value": "2025-03-01" },
            { "key": "to", "value": "2025-03-18" }
          ]
        }
      }
    }
  ]
}
